[Unit]
Description=BreadCounting main.py Service
After=network.target

[Service]
Type=simple
User=sunrise
WorkingDirectory=/home/sunrise/BreadCounting/
ExecStart=bash -c 'source /opt/tros/humble/setup.bash && python /home/sunrise/BreadCounting/main.py'
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target